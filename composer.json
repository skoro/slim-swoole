{
    "name": "skoro/slim-swoole",
    "description": "Slim Framework + Swoole boilerplate",
    "keywords": [
        "microframework", "swoole", "async"
    ],
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-swoole": "^4.8",
        "slim/slim": "^4.9",
        "skoro/slim-swoole-integration": "dev-master",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.8",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/functions.php"
        ]
    },
    "scripts": {
        "server": "@php server.php"
    }
}
